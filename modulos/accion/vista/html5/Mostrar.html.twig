{% extends 'Accion.html.twig' %}

{% block contenido %}

	<br><BR>
	<div class="container">

		<div class="row">

			<div class="col-lg-12"> <center><h1>Administración de acciones</h1></center></div>
      <input type='hidden' value='{{usuBD}}' id='usubd'>
		</div>

		<div class="row" id="conAcciones">

			<div class="col-lg-6">
			
				<br>
				<div class="row">
					<div class="col-lg-6">
						<div class="input-group">
  							<span class="input-group-addon" title="Buscar acciones"><i class="icon-search"></i>
  							</span>
  							<input oninput="busAcciones()" id="patronAcciones" type="text" class="form-control 1" placeholder="Buscar acciones" id="busAcciones">
						</div>
					<br>
					</div>
					<div class="col-lg-4">
           
					</div>
          <div class="col-lg-2">
              <center><a href="otros/manuales/usuario/index.html#accion" target="_blank"> <i  title="Ayuda"class="glyphicon glyphicon-question-sign iconoAyuda"></i> </a></center>
          </div>

				</div>
       
				
				<div class="row" id="acciones">
					<div class="col-lg-10">
						

					<div id="panelAcciones" class="panel panel-default" >
  						<div class="panel-heading">
  							<div class="row">
  								<div class="col-lg-12">
  									<h4 class="titBold"><center> Lista de acciones &nbsp; 
                        {% if (login.obtenerPermiso('AccionAgregar')) %}
                           <a title="Agregar Acción" href="javascript:camAccion();"><i class="icon-plus-sign iconoAgregar" ></i>
                            </a></center>
                        {% endif %} 
                    </h4> 
  								</div>

  								
  							</div>
  							 
  						</div>
  						
  						
 
  						<div class="list-group">
  							<a href="#" class="list-group-item active"> 
  								<div class="row">
  									<div class="col-lg-2">
  										#id
  									</div>
  									<div class="col-lg-10">
  										Nombre acción
  									</div>
  								</div>

  							</a>
              </div>
  							<div class="list-group" id="listaAcciones">
  							{% for accion in acciones %}
  								<a id="{{accion.codigo}}" href="#" class="list-group-item  accionesElementos"> 
  								
  									<div class="row">
  										<div class="col-lg-2">
  											{{accion.codigo}} 
  										</div>
  										<div class="col-lg-7">
  											{{accion.nombre}} 
  										</div>
  										<div class="col-lg-1">
  											<i id="c{{accion.codigo}}" class="iconosAcciones" title="clonar Accion"><img src='recursos/assets/ico/copiar.png' onclick=" camAccion('c',{{accion.codigo}} )" height="20px" width="20px" class='img-circle iconoClonar '></i>

  										</div>

  										<div class="col-lg-1">
                        {% if (login.obtenerPermiso('AccionModificar')) %}
  											   <i id="m{{accion.codigo}}" title="Modificar acción "class="icon-pencil iconosAcciones iconoModificar" onclick=" camAccion('m',{{accion.codigo}} )" ></i>
                        {% endif %} 
  										</div>
  										<div class="col-lg-1">
                        {% if (login.obtenerPermiso('AccionEliminar')) %}
  											 <i id="e{{accion.codigo}}" title="Eliminar Acción" class="icon-remove iconosAcciones iconoEliminar" onclick=" admAccion('e',{{accion.codigo}} )"></i>
                        {% endif %} 
  										</div>
  									</div>

  								</a>
  							{% endfor %}
  							

						</div>
					</div>



					</div>


				</div>

			</div>
			<br>
			<div class="col-lg-6" id="agrModAccion">


			</div>




		</div>	

	</div>
	
{% endblock %}